    "pub": "yarn publish --access public",
    "prepublishOnly": "yarn build",
    "test": "npx hardhat test",
    "test:local": "hardhat --network localhost test",
    "coverage": "npx hardhat coverage"
  },
  "resolutions": {
    "ethereum-ens": "0.8.0",
    "js-sha3": "0.8.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3",
