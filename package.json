{
  "name": "spaceid-toolkit-contracts",
  "version": "1.0.0",
  "description": "toolkit contracts for issuing customized domain name service",
  "license": "MIT",
  "module": "NodeNext",
  "author": {
    "name": "eddie",
    "email": "eddie@space.id"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Space-ID/spaceid-toolkit-contracts.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "npx hardhat compile",
    "lint": "npx hardhat check",
