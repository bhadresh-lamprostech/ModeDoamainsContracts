    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "elliptic-solidity": "^1.0.0",
    "eth-ens-namehash": "^2.0.8",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.1",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-deploy": "^0.11.10",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
